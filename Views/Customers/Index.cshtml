@model List<UsersApp.Models.Customer>
@{
    ViewData["Title"] = "Customers";
}

<h2 class="text-center mb-3">List of Customers</h2>

<a class="btn btn-primary mb-3" asp-action="Create">Create New Customer</a>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Company</th>
            <th>Created At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Id</td>
                <td>@(customer.FirstName + " " + customer.LastName)</td>
                <td>@customer.Email</td>
                <td>@customer.Phone</td>
                <td>@customer.Company</td>
                <td>@customer.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                <td style="white-space: nowrap">
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@customer.Id">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@customer.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>